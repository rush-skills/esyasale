/* general styles */
html, body {
  height: 100%;
  width: 100%;
}

/* padded section */
.pad-section {
  padding: 50px 0;
}
.pad-section img {
  width: 100%;
}

/* vertical-centered text */
.text-vcenter1 {
  display: table-cell;
  vertical-align: middle;
}

/* vertical-centered text */
.text-vcenter {
  display: table-cell;
  text-align: center;
  vertical-align: middle;
}
.text-vcenter h1 {
  font-size: 4.5em;
  font-weight: 700;
  margin: 0;
  padding: 0;
}

/* additional sections */
#home {
  background: url(<%= asset_url 'Comedy.png' %>) no-repeat center center fixed; 
  display: table;
  height: 100%;
  position: relative;
  width: 100%;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}
.registerbox{
  float:right;
  margin-right: 10%;
  width: auto;
  height: auto;
  border: 1px solid white;
  padding: 20px;
}
#rhome .registerbox{
  border: none;
}
.registerbox h1{
  color: white;
  line-height: 1.5;
}
#rhome .registerbox h1{
  color: black;
  font-size: 24px;
} 
#rhome .registerbox h3{
  color: black;
  font-size: 20px;
}
#about {
  padding: 5%;
}

#home{
	padding-left: 2%;
	color: white;
}


@media (max-width:550px){
  
  #home {
    display: none;
  }
}
@media (min-width:550px){
  
  #rhome {
    display: none;
  }
}
